<div class="row">

    <div class="col-sm-6">
        <h3>Burgers To Eat</h3>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
    </div>
    <div class="col-sm-6">
        <h3>Burgers Eaten:</h3>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
    </div>
</div>

<hr>

<h1 class="indexbody">What type of burger do you want today?</h1>



<form class="add-burger">
    <div class="form-group">
        <label for="burgerName"></label>
        <textarea class="form-control" id="burgerName" row="1"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Add Da Burger</button>
</form>